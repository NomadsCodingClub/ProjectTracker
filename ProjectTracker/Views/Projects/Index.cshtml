@model IQueryable<Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="row">
    <div class="col">
        <h1>Projects</h1>
    </div>
</div>

<div class="row mt-4">
    <div class="col">
        <a class="btn btn-primary" asp-area="" asp-controller="Projects" asp-action="Add">
            <span class="fa fa-plus-circle"></span> Add Project
        </a>
    </div>
</div>

<div class="table-responsive mt-4">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Project</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() > 0)
            {
                @foreach (Project project in Model)
                {
                    <tr>
                        <td>
                            <a asp-area="" asp-controller="Projects" asp-action="Project" asp-route-id="@project.ID">@project.Name</a>
                        </td>
                        <td>&nbsp;</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">No projects found</td>
                </tr>
            }
        </tbody>
    </table>
</div>