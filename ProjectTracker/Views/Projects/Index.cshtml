@model IQueryable<Project>
@{
    ViewData["Title"] = "Projects";
}

<div class="row">
    <div class="col">
        <h1>Projects</h1>
    </div>
</div>

<table class="table table-responsive">
    <thead>
        <tr>
            <th scope="col">Project</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() > 0)
        {
            @foreach (Project project in Model)
            {
                <tr>
                    <td>@project.Name</td>
                    <td>&nbsp;</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">No projects found</td>
            </tr>
        }
    </tbody>
</table>